<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.FormularioIncidenciaController"
      spacing="15"
      style="-fx-padding: 20;"
      stylesheets="@/styles.css">

    <Label text="Nueva Incidencia" styleClass="titulo-formulario"/>

    <TextArea fx:id="descripcionTextArea"
              promptText="Describa su incidencia..."
              styleClass="campo-texto"
              prefRowCount="4"/>

    <HBox spacing="15">
        <Button text="Crear" onAction="#handleCrear" styleClass="boton-primario"/>
        <Button text="Cancelar" onAction="#handleCancelar" styleClass="boton-secundario"/>
    </HBox>
</VBox>